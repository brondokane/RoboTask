<div class="auth-container">
  <nav class="navbar navbar-default">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed"
              data-toggle="collapse"
              data-target="#collapse-menu"
              aria-expanded="false">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand">RoboTask</a>
    </div>
    <div class="collapse navbar-collapse" id="collapse-menu">
      <ul class="nav navbar-nav navbar-right">
        <li>
          <a href="https://www.taskrabbit.com">inspired by TaskRabbit</a>
        </li>
      </ul>
    </div>
  </nav>
  <div class="auth-outer-window" id="signup-form-outer-window">
    <div class="auth-inner-window" id="signup-form-inner-window">
      <h3>Create Account</h3>
      <form action="<%= users_url %>" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

        <div class="form-group">
          <label for="user-fname">First name</label><br>
          <input
            type="text"
            name="user[fname]"
            class="form-control"
            value=<%= @user.fname %>
          ><br>
        </div>

        <div class="form-group">
          <label for="user-lname">Last name</label><br>
          <input
            type="text"
            name="user[lname]"
            class="form-control"
            value=<%= @user.lname %>
          ><br>
        </div>

        <div class="form-group">
          <label for="user-email">Email</label><br>
          <input
            type="text"
            name="user[email]"
            class="form-control"
            value=<%= @user.email %>
          ><br>
        </div>

        <div class="form-group">
          <label for="user-password">Password</label><br>
          <input
            type="password"
            name="user[password]"
            id="user-password"
            class="form-control"
          ><br>
        </div>

        <input type="radio" name="user[is_robot]" id="is_robot_true" value=false>
        <label for="is_robot_true">I seek robot help.</label>
        <br>

        <input type="radio" name="user[is_robot]" id="is_robot_true" value=true>
        <label for="is_robot_false">I'm a robot looking for work.</label>
        <br>

        <div>
          <button
            class="btn btn-default"
            type="submit"
            value="Signup">
            Create Account
          </button>
        </div><br/>
        <div><a href="/session/new"> Already have an account? </a></div>
        <% if flash[:errors] %>
          <% flash[:errors].each do |error| %>
            <div><%= error %></div>
          <% end %>
        <% end %>
      </form>
    </div>
  </div>
</div>
